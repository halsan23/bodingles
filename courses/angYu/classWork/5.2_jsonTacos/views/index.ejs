<!DOCTYPE html>
<html>

<head>
   <title>Taco Recipes</title>
   <link rel="stylesheet" type="text/css" href="/styles/main.css">
</head>

<body>
   <h1>🌮 Taco Town 🌮</h1>

   <form action="/" method="POST" class="buttons">
      <button type="submit" value="Beef" name="choice">🥩</button>
      <button type="submit" value="Chicken" name="choice">🍗</button>
      <button type="submit" value="Fish" name="choice">🐟</button>
   </form>

   <div id="recipeContainer" class="hidden">
      <%if (!locals.taco) {%>
         <h2>👆 Pick your favorite kind of taco 👆</h2>
      <% } else { %>
         <h2><%= taco.name %>s&nbsp;&nbsp;-&nbsp;&nbsp;Only $<%= taco.price %> ea.</h2>
         <ul>
            <li><h3>Ingredients:</h3></li>
            <li class="info"><%= taco.ingredients.protein.name %> : <%= taco.ingredients.protein.preparation %></li>
            <li class="info"><%= taco.ingredients.salsa.spiciness %> <%= taco.ingredients.salsa.name %></li>
            <li><h3>Toppings:</h3></li>
            <% taco.ingredients.toppings.forEach( topping => { %>
               <li class="info"><%= topping.quantity %> <%= topping.name %>
                  <ul>
                     <li class="info sub">( <%= topping.ingredients %> )</li>
                  </ul>
               </li>
            <% }); %>
         </ul>
      <% } %>
   </div>
</body>
</html>
